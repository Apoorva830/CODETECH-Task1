/* Creating a Advanced Calculator */
def add(x, y):
    return x + y

def subtract(x, y):
    return x - y

def multiply(x, y):
    return x * y

def divide(x, y):
    if y == 0:
        return "Error: Division by zero is not allowed."
    return x / y

def main():
    history = []  # To store the history of calculations
    print("Welcome to the Basic Calculator!")
    
    while True:
        try:
            # Prompt user for input
            num1 = float(input("\nEnter the first number: "))
            num2 = float(input("Enter the second number: "))
        except ValueError:
            print("Invalid input. Please enter numeric values.")
            continue
        
        # Display operations
        print("\nSelect an operation:")
        print("1. Addition (+)")
        print("2. Subtraction (-)")
        print("3. Multiplication (*)")
        print("4. Division (/)")

        operation = input("Choose an operation (1/2/3/4) or 'q' to quit: ")

        if operation == 'q':
            break

        if operation not in ['1', '2', '3', '4']:
            print("Invalid operation. Please choose a valid option.")
            continue

        # Perform the selected operation
        if operation == '1':
            result = add(num1, num2)
            operation_symbol = '+'
        elif operation == '2':
            result = subtract(num1, num2)
            operation_symbol = '-'
        elif operation == '3':
            result = multiply(num1, num2)
            operation_symbol = '*'
        elif operation == '4':
            result = divide(num1, num2)
            operation_symbol = '/'

        # Display the result
        print(f"\nResult: {num1} {operation_symbol} {num2} = {result}")
        
        # Store the calculation in history
        history.append(f"{num1} {operation_symbol} {num2} = {result}")

    # Display calculation history
    print("\nCalculation History:")
    for entry in history:
        print(entry)

if __name__ == "__main__":
    main()
